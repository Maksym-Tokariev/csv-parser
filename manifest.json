{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on websites",
  "permissions": ["storage", "tabs", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "src/images/hello_extensions.png"
  },
  "web_accessible_resources": [{
    "resources": ["src/lib/chart.umd.js"],
    "matches": []
  }]
}
